// PRE LOADER
section.preloader
  .spinner
    span.spinner-rotate
// MENU
section.navbar.custom-navbar.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(data-toggle='collapse' data-target='.navbar-collapse')
        span.icon.icon-bar
        span.icon.icon-bar
        span.icon.icon-bar
      // lOGO TEXT HERE
      a.navbar-brand(href='/index') Edit A Movie
    // MENU LINKS
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li
          a(href='#')
            i.fa.fa-facebook-square
        li
          a(href='#')
            i.fa.fa-twitter
        li
          a(href='#')
            i.fa.fa-instagram
        li.section-btn
          a(href='/logout') Logout
// HOME
section#home(data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row
      each val in movie
        // CONTACT FORM HERE
        form#add-form(role='form' action='/movieedited' method='post')
          .col-md-6.col-sm-6
            input#titlee.form-control(type='text' placeholder='Movie Title' name='title' required='' value=`${val.title}`)
          .col-md-6.col-sm-6
            input#year.form-control(type='number' placeholder='Year' name='year' required='' value=`${val.year}`)
            <br/>
          .col-md-6.col-sm-6
            input#rating.form-control(type='number' placeholder='Rating' name='rating' required='' min="0" max="10" step="any" value=`${val.ratimg}`)
          .col-md-6.col-sm-6
            input#lead.form-control(type='text' placeholder='Lead Star' name='lead' required='' value=`${val.lead}`)
            <br/>
          .col-md-6.col-sm-6
            input#image.form-control(type='tel' placeholder='Image Link' name='image' required='' value=`${val.imagelink}`)
          .col-md-6.col-sm-6
            input#video.form-control(type='text' placeholder='Video Link' name='video' required='' value=`${val.videolink}`)
            <br/>
          .col-md-6.col-sm-6
            input#trailer.form-control(type='tel' placeholder='Trailer Link' name='trailer' required='' value=`${val.trailerlink}`)
          .col-md-6.col-sm-6
            .col-md-3.col-sm-3
                input#action.form-control(type='checkbox' name='genre' value='Action' )
                <label for="action">Action</label>
            .col-md-3.col-sm-3
                input#video.form-control(type='checkbox' name='genre' value='Adventure')
                <label for="adventure">Adventure</label>
            .col-md-3.col-sm-3
                input#comedy.form-control(type='checkbox'  name='genre'  value='Comedy')        
                <label for="comedy">Comedy</label>
          //-   <br/>
          //- .col-md-6.col-sm-6
          //-   <label for="rating">Rating</label>
          //-   input#trailer.form-control(type='range' placeholder='Rating' name='rating' required='' )

          .col-md-12.col-sm-12
            <br/>
            input.form-control(type='submit' id='send')
        
